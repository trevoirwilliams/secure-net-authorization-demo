@page
@model SecureTaskHub.Web.Pages.MyTasksModel
@{
    ViewData["Title"] = "My Tasks";
}

<div class="container mt-4">
    <h1 class="mb-4">My Tasks</h1>
    
    <p class="text-muted">
        Welcome, <strong>@User.Identity?.Name</strong>! 
        You can only see and manage your own tasks.
    </p>

    @if (Model.Tasks.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td>@task.Id</td>
                            <td>@task.Title</td>
                            <td>@(task.Description ?? "(no description)")</td>
                            <td>
                                <span class="badge bg-@(task.Status.ToString() switch
                                {
                                    "New" => "primary",
                                    "InProgress" => "warning",
                                    "Done" => "success",
                                    _ => "secondary"
                                })">
                                    @task.Status
                                </span>
                            </td>
                            <td>@task.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a asp-page="/TaskDetails" asp-route-id="@task.Id" class="btn btn-sm btn-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>No tasks found.</strong> You haven't created any tasks yet.
        </div>
    }
</div>
